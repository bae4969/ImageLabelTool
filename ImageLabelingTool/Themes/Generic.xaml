<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:ImageLabelingTool"
    xmlns:controls="clr-namespace:ImageLabelingTool.Controls"
    xmlns:imageControls="clr-namespace:ImageLabelingTool.Controls.Image">


	<Style TargetType="{x:Type imageControls:ImageControlBase}">
        <Setter Property="Template">
            <Setter.Value>
				<ControlTemplate TargetType="{x:Type imageControls:ImageControlBase}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>

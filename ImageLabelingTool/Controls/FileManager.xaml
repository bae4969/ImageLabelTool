<UserControl x:Class="ImageLabelingTool.Controls.FileManager"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:local="clr-namespace:ImageLabelingTool.Controls"
			 mc:Ignorable="d" 
			 d:DesignHeight="800" d:DesignWidth="400"
			 Loaded="UserControl_Loaded"
			 >
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<!-- 파일 리스트 -->
		<ListBox Grid.Row="0" x:Name="FileList" Margin="5" Padding="5" BorderThickness="1" ItemsSource="{Binding __file_names}">
			<ListBox.ItemTemplate>
				<DataTemplate>
					<Button Content="{Binding}" ContextMenuOpening="FileList_ContextMenuOpening" />
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>

		<GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="0,5,0,5"/>

		<!-- 파일 탐색기 -->
		<Grid Grid.Row="2">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="Auto"/>
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="*"/>
			</Grid.RowDefinitions>

			<Rectangle
				Grid.Row="0"
				Grid.Column="0"
				Margin="5"
				RadiusX="5"
				RadiusY="5"
				Fill="#3F3F3F"
				/>

			<TextBlock
				x:Name="BasePathTextBlock"
				Grid.Row="0"
				Grid.Column="0"
				Text=""
				FontSize="16"
				FontWeight="Bold"
				Margin="5"
				HorizontalAlignment="Stretch"
				VerticalAlignment="Center"
				/>
			
			<Button
				x:Name="ChangeBasePathButton"
				Grid.Row="0"
				Grid.Column="1"
				Content="..."
				Margin="5"
				HorizontalAlignment="Center"
				VerticalAlignment="Center"
				Click="ChangeBasePathButton_Click"
				/>

			<TreeView
				x:Name="FileExplorer" 
				Grid.Column="0"
				Grid.ColumnSpan="2"
				Grid.Row="1"
				Margin="5"
				BorderThickness="1"
				>
			</TreeView>
		</Grid>
	</Grid>
</UserControl>

<local:StereoVideoControlBase
	x:Class="StereoVideoLabelingTool.Widgets.VideoLutControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:StereoVideoLabelingTool.Widgets"
    mc:Ignorable="d" 
    d:DesignHeight="100" d:DesignWidth="800">

	<GroupBox Header="Brightness &amp; Contrast" Padding="3">
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="50" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="*" />
				<RowDefinition Height="*" />
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>

			<Label
				Grid.Column="0"
				Grid.Row="0"
				Content="Min"
				VerticalContentAlignment="Center"
				HorizontalContentAlignment="Center"
				>
				
			</Label>
			<Slider
				x:Name="MinValueSlider"
				Grid.Column="1"
				Grid.Row="0"
				Minimum="0"
				Maximum="100"
				Value="0"
				ValueChanged="ValueSlider_ValueChanged"
				>

			</Slider>

			<Label
				Grid.Column="0"
				Grid.Row="1"
				Content="Max"
				VerticalContentAlignment="Center"
				HorizontalContentAlignment="Center"
				>

			</Label>
			<Slider
				x:Name="MaxValueSlider"
				Grid.Column="1"
				Grid.Row="1"
				Minimum="0"
				Maximum="100"
				Value="100"
				ValueChanged="ValueSlider_ValueChanged"
				>

			</Slider>

			<Label
				Grid.Column="0"
				Grid.Row="2"
				Content="Blend"
				VerticalContentAlignment="Center"
				HorizontalContentAlignment="Center"
				>

			</Label>
			<Slider
				x:Name="BlendValueSlider"
				Grid.Column="1"
				Grid.Row="2"
				Minimum="0"
				Maximum="1"
				Value="0.3"
				ValueChanged="ValueSlider_ValueChanged"
				>

			</Slider>
		</Grid>
	</GroupBox>
</local:StereoVideoControlBase>

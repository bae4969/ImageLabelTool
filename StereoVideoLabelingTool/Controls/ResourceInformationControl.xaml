<UserControl
	x:Class="StereoVideoLabelingTool.Controls.ResourceInformationControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:StereoVideoLabelingTool.Controls"
	mc:Ignorable="d"
	d:DesignHeight="300"
	d:DesignWidth="300"
	Padding="5"
	>

	<ScrollViewer>

		<TextBlock
		x:Name="InfoTextBlock"
		Foreground="{DynamicResource MahApps.Brushes.ThemeForeground}"
		Text="{Binding InfoText, RelativeSource={RelativeSource AncestorType=UserControl}}"
		/>
	</ScrollViewer>
</UserControl>

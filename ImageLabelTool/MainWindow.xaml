<Window x:Class="ImageLabelTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageLabelTool"
        xmlns:controls="clr-namespace:ImageLabelTool.Controls"
        mc:Ignorable="d"
        Title="MainWindow"
		Height="900"
		Width="1600"
		Closing="Window_Closing"
		>
	<Grid>
		<!-- 전체 Layout -->
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="40"/>
		</Grid.RowDefinitions>

		<!-- 상단 메뉴바 -->
		<Menu Grid.Row="0">
			<MenuItem Header="저장" FontSize="16" FontWeight="Bold"/>
			<MenuItem Header="불러오기" FontSize="16" FontWeight="Bold"/>
			<MenuItem Header="설정" FontSize="16" FontWeight="Bold"/>
		</Menu>

		<!-- 메인 컨텐츠 -->
		<Grid Grid.Row="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="2*"/>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="5*"/>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="2*"/>
			</Grid.ColumnDefinitions>


			<!-- 좌측 패널 -->
			<Grid Grid.Column="0">
				<Grid.RowDefinitions>
					<RowDefinition Height="*" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="*" />
				</Grid.RowDefinitions>
			</Grid>

			<controls:VerticalImageControlContainer
				x:Name="LeftTopContainer"
				Margin="5"
				Padding="5"
				Grid.Row="0"
				>

				<controls:VerticalImageControlContainer.Items>
					<Button
						Content="Load"
						HorizontalAlignment="Stretch"
						Height="50"
						Margin="5"
						Click="Button1_Click"
						/>
					<Button
						Content="Unload"
						HorizontalAlignment="Stretch"
						Height="50"
						Margin="5"
						Click="Button2_Click"
						/>
				</controls:VerticalImageControlContainer.Items>
			</controls:VerticalImageControlContainer>

			<GridSplitter Grid.Column="1" Width="5" Margin="5,0,5,0" HorizontalAlignment="Stretch" />

			<!-- 중앙 패널 -->
			<controls:ImageLabelViewer x:Name="ImageLabelViewerControl" Grid.Column="2"  BorderThickness="1"/>

			<GridSplitter Grid.Column="3" Width="5" Margin="5,0,5,0" HorizontalAlignment="Stretch" />

			<!-- 우측 패널 -->
			<Grid Grid.Column="4">
				<Grid.RowDefinitions>
					<RowDefinition Height="*" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="*" />
				</Grid.RowDefinitions>

				<!-- 우측 상단 패널 -->
				<controls:VerticalImageControlContainer
					x:Name="RightTopContainer"
					Margin="5"
					Padding="5"
					Grid.Row="0"
					>

					<controls:VerticalImageControlContainer.Items>
						<controls:ImageLutController/>
					</controls:VerticalImageControlContainer.Items>
				</controls:VerticalImageControlContainer>

				<GridSplitter Grid.Row="1" Height="5" Margin="0,5,0,5" HorizontalAlignment="Stretch" />

				<!-- 우측 하단 패널 -->
				<controls:VerticalImageControlContainer
					x:Name="RightBotContainer"
					Margin="5"
					Padding="5"
					Grid.Row="2"
					>

					<controls:VerticalImageControlContainer.Items>
						<TextBox Text="asd"/>
						<TextBox Text="asd"/>
					</controls:VerticalImageControlContainer.Items>
				</controls:VerticalImageControlContainer>
			</Grid>
		</Grid>

		<GridSplitter Grid.Row="2" Height="5" Margin="0,5,0,5" HorizontalAlignment="Stretch" />

		<!-- 하단 정보 -->
		<GroupBox BorderThickness="1" Grid.Row="3" Header="Log">
			<TextBlock x:Name="LogTextBlock"/>
		</GroupBox>
	</Grid>
</Window>

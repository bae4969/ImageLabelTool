<UserControl x:Class="ImageLabelTool.Controls.ImageLabelViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ImageLabelTool.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="20"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>


		<!-- 이미지 도구 -->
		<Menu Grid.Row="0" Background="LightGray">
			<MenuItem Header="Label" FontSize="13" Padding="5" BorderBrush="#AAAAAA"/>
			<MenuItem Header="Region" FontSize="13" Padding="5" BorderBrush="#AAAAAA"/>
			<MenuItem Header="설정" FontSize="13" Padding="5" BorderBrush="#AAAAAA"/>
		</Menu>

		<Canvas x:Name="TopViewCanvas" Grid.Row="1" Background="#202020">

		</Canvas>

		<Canvas x:Name="SideViewCanvas" Grid.Row="2" Background="#202020">

		</Canvas>
	</Grid>
</UserControl>
